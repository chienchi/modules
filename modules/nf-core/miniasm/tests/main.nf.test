// nf-core modules test miniasm
nextflow_process {

    name "Test Process MINIASM"
    script "../main.nf"
    process "MINIASM"

    tag "modules"
    tag "modules_nfcore"
    tag "miniasm"

    test("bacteroides_fragilis - [fastq.gz, paf]- fasta") {

        when {
            process {
                """                
                input[0] = [ 
                    [ id:'test', single_end:true ], // meta map
                    file(params.test_data['bacteroides_fragilis']['nanopore']['test_fastq_gz'], checkIfExists: true),
                    file(params.test_data['bacteroides_fragilis']['nanopore']['overlap_paf'], checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(file(process.out.gfa.get(0).get(1)).name).match("output/miniasm/test.gfa.gz") },
                { assert snapshot(file(process.out.assembly.get(0).get(1)).name).match("output/miniasm/test.fasta.gz") },
                { assert snapshot(process.out.versions).match("versions") }
                // Unstable hashes { assert snapshot(process.out).match() }
            )
        }

    }

}
